<UserControl x:Class="WpfApp3.DigitForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid>
        <TextBox x:Name="NumberTextBox" TextAlignment="Center" VerticalAlignment="Center" MaxLength="16" FontSize="16" KeyDown="TextBox_InputFilter" KeyUp="TextBox_BlockSpace"/>
    </Grid>
</UserControl>
